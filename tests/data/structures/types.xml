<?xml version="1.0" encoding="UTF-8"?>
<sql:datasource xmlns:sql="http://xsd.nore.fr/sql/2.0">
	<sql:tableset name="ns_unittests">
		<sql:table name="types">
			<sql:column name="base"></sql:column>
			<sql:column name="binary">
				<sql:datatype>
					<sql:binary />
				</sql:datatype>
				<sql:default>
					<!-- abc -->
					<sql:base64Binary>YWJj</sql:base64Binary>
				</sql:default>
			</sql:column>
			<sql:column name="boolean">
				<sql:datatype>
					<sql:boolean />
				</sql:datatype>
				<sql:default>
					<sql:boolean>true</sql:boolean>
				</sql:default>
			</sql:column>
			<sql:column name="int">
				<sql:datatype>
					<sql:numeric />
				</sql:datatype>
				<sql:default>
					<sql:integer>3</sql:integer>
				</sql:default>
			</sql:column>
			<sql:column name="large_int">
				<sql:comment>A large int with size spec.</sql:comment>
				<sql:datatype>
					<sql:numeric length="12"  />
				</sql:datatype>
			</sql:column>
			<sql:column name="small_int">
				<sql:comment>A quite small int with size spec.</sql:comment>
				<sql:datatype>
					<sql:numeric length="3"  />
				</sql:datatype>
			</sql:column>
			<sql:column name="float">
				<sql:datatype>
					<sql:numeric decimals="2" />
				</sql:datatype>
				<sql:default>
					<sql:number>1.23</sql:number>
				</sql:default>
			</sql:column>
			<sql:column name="timestamp">
				<sql:datatype>
					<sql:timestamp>
						<sql:date/>
						<sql:time/>
					</sql:timestamp>
				</sql:datatype>
				<sql:default>
					<sql:timestamp>2010-11-12T13:14:15+01:00</sql:timestamp>
				</sql:default>
			</sql:column>
			<sql:column name="timestamp_tz">
				<sql:datatype>
					<sql:timestamp />
				</sql:datatype>
				<sql:default>
					<sql:timestamp>2010-11-12T13:14:15+01:00</sql:timestamp>
				</sql:default>
			</sql:column>
			<sql:primarykey name="pk_types">
				<sql:column name="base" />
				<sql:column name="int" />
			</sql:primarykey>
		</sql:table>
	</sql:tableset>
</sql:datasource>