<?xml version="1.0" encoding="UTF-8"?>
<sql:datasource version="1.0" xmlns:sql="http://xsd.nore.fr/sql" xmlns:xi="http://www.w3.org/2001/XInclude">
	<sql:database name="ns_unittests">
		<sql:table name="Employees" id="nsut.tables.Employees">
			<sql:comment>Company employees</sql:comment>
			<sql:column name="id">
				<sql:datatype>
					<sql:numeric />
				</sql:datatype>
				<sql:notnull />
			</sql:column>
			<sql:column name="name">
				<sql:datatype>
					<sql:string />
				</sql:datatype>
			</sql:column>
			<sql:column name="gender">
				<sql:datatype>
					<sql:string>
						<sql:enumeration>
							<sql:value>M</sql:value>
							<sql:value>F</sql:value>
						</sql:enumeration>
					</sql:string>
				</sql:datatype>
			</sql:column>
			<sql:column name="salary">
				<sql:datatype>
					<sql:numeric length="7" decimals="2" />
				</sql:datatype>
			</sql:column>
			<sql:primarykey name="pk_id">
				<sql:column name="id" />
			</sql:primarykey>
		</sql:table>

		<sql:index name="index_employees_name">
			<sql:tableref name="Employees" />
			<sql:column name="name" />
		</sql:index>

		<sql:table name="Hierarchy">
			<sql:column name="managerId">
				<sql:datatype>
					<sql:numeric />
				</sql:datatype>
				<sql:notnull />
			</sql:column>
			<sql:column name="manageeId">
				<sql:datatype>
					<sql:numeric />
				</sql:datatype>
				<sql:notnull />
			</sql:column>

			<sql:primarykey>
				<sql:column name="managerId" />
				<sql:column name="manageeId" />
			</sql:primarykey>

			<sql:foreignkey>
				<sql:column name="managerId" />
				<sql:reference>
					<sql:tableref id="nsut.tables.Employees" />
					<sql:column name="id" />
					<sql:onupdate action="cascade" />
					<sql:ondelete action="cascade" />
				</sql:reference>
			</sql:foreignkey>
			<sql:foreignkey>
				<sql:column name="manageeId" />
				<sql:reference>
					<sql:tableref name="Employees" />
					<sql:column name="id" />
					<sql:onupdate action="cascade" />
					<sql:ondelete action="cascade" />
				</sql:reference>
			</sql:foreignkey>
		</sql:table>

		<sql:table name="Tasks">
			<sql:column name="id">
				<sql:datatype>
					<sql:numeric autoincrement="yes" />
				</sql:datatype>
			</sql:column>
			<sql:column name="name">
				<sql:datatype>
					<sql:string length="32" />
				</sql:datatype>
			</sql:column>
			<sql:column name="creationDateTime">
				<sql:comment>Creation timestamp</sql:comment>
				<sql:datatype>
					<sql:timestamp />
				</sql:datatype>
				<sql:default>
					<!-- Empty value = NOW / CURRENT_TIMESTAMP -->
					<sql:datetime />
				</sql:default>
			</sql:column>
			<sql:column name="priority">
				<sql:datatype>
					<sql:numeric />
				</sql:datatype>
			</sql:column>
			<sql:column name="category">
				<sql:datatype>
					<sql:numeric />
				</sql:datatype>
			</sql:column>
			<sql:column name="creator">
				<sql:datatype>
					<sql:numeric />
				</sql:datatype>
				<sql:default>
					<sql:null />
				</sql:default>
			</sql:column>


			<sql:column name="assignedTo">
				<sql:datatype>
					<sql:numeric />
				</sql:datatype>
				<sql:default>
					<sql:null />
				</sql:default>
			</sql:column>

			<sql:primarykey name="pk_tid">
				<sql:column name="id" />
			</sql:primarykey>

			<sql:foreignkey name="fk_creator">
				<sql:column name="creator" />
				<sql:reference>
					<sql:tableref id="nsut.tables.Employees" />
					<sql:column name="id" />
					<sql:ondelete action="cascade" />
					<sql:onupdate action="cascade" />
				</sql:reference>
			</sql:foreignkey>

			<sql:foreignkey>
				<sql:column name="assignedTo" />
				<sql:reference>
					<sql:tableref name="Employees" />
					<sql:column name="id" />
					<sql:ondelete action="cascade" />
					<sql:onupdate action="cascade" />
				</sql:reference>
			</sql:foreignkey>
		</sql:table>

		<xi:include href="./types.xml" xpointer="xmlns(sql=http://xsd.nore.fr/sql) xpointer(//sql:table)" />

	</sql:database>
</sql:datasource>
